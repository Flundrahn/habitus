{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "build",
      "command": "dotnet",
      "type": "process",
      "args": [
        "build",
        "${workspaceFolder}/habitus.api/habitus.api.csproj",
        "/property:GenerateFullPaths=true",
        "/consoleloggerparameters:NoSummary"
      ],
      "problemMatcher": "$msCompile"
    },
    {
      "label": "publish",
      "command": "dotnet",
      "type": "process",
      "args": [
        "publish",
        "${workspaceFolder}/habitus.api/habitus.api.csproj",
        "/property:GenerateFullPaths=true",
        "/consoleloggerparameters:NoSummary"
      ],
      "problemMatcher": "$msCompile"
    },
    {
      "label": "watch",
      "command": "dotnet",
      "type": "process",
      "args": [
        "watch",
        "run",
        "--project",
        "${workspaceFolder}/habitus.api/habitus.api.csproj"
      ],
      "problemMatcher": "$msCompile"
    },
    {
      "label": "Client Run",
      "command": "yarn",
      "type": "shell",
      "args": ["dev"],
      "options": {
        "cwd": "${workspaceFolder}/habitus.ui/"
      }
    },
    {
      "label": "Server Run",
      "command": "dotnet",
      "type": "process",
      "args": [
        "watch",
        "run",
        "--project",
        "${workspaceFolder}/habitus.api/habitus.api.csproj"
      ],
      "problemMatcher": "$msCompile"
    },
    {
      "label": "Run",
      "dependsOn": ["Client Run", "Server Run"],
      "presentation": {
        "reveal": "always",
        "panel": "new",
        "showReuseMessage": true,
        "clear": false
      }
    }
  ]
}
