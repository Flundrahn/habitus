{
  "extends": [
    // "eslint:recommended",
    "next/core-web-vitals",
    // "plugin:react/recommended",
    "plugin:@typescript-eslint/recommended"
  ],
  "rules": {
    "semi": [
      "error",
      "always"
    ],
    "indent": [
      "error",
      2
    ],
    "object-curly-spacing": [
      "error",
      "always"
    ],
    "arrow-parens": [
      "error",
      "as-needed"
    ],
    "jsx-quotes": [
      "error",
      "prefer-double"
    ],
    "react-hooks/exhaustive-deps": "off",
    "no-trailing-spaces": "error",
    "comma-dangle": [
      "error",
      "always-multiline"
    ]
  }
}